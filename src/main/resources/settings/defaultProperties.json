{
  "properties": {
    "width": {
      "type": "int",
      "default": 1000,
      "description": "Window width in pixels",
      "editable": false
    },
    "height": {
      "type": "int",
      "default": 1000,
      "description": "Window height in pixels",
      "editable": false
    },
    "renderMode": {
      "type": "selector",
      "default": "impGlow",
      "options": ["off", "points", "imp", "impGlow", "mesh"],
      "description": "Render mode",
      "editable": true
    },
    "showRegions": {
      "type": "boolean",
      "default": false,
      "description": "Show regions",
      "editable": true
    },
    "wrapAround": {
      "type": "boolean",
      "default": false,
      "description": "Wrap around",
      "editable": true
    },
    "mergingCollisionOrNeither": {
      "type": "selector",
      "default": "none",
      "options": ["none", "merge", "collision"],
      "description": "Collision merging or neither",
      "editable": true
    },
    "dynamic": {
      "type": "selector",
      "default": "static",
      "options": ["static", "dynamic"],
      "description": "Simulation bounds",
      "editable": true
    },
    "dt": {
      "type": "float",
      "default": 1,
      "description": "Time step",
      "editable": true
    },
    "theta": {
      "type": "float",
      "default": 0.6,
      "description": "Barnes-Hut acceptance criterion",
      "editable": true
    },
    "cameraScale": {
      "type": "float",
      "default": 10.0,
      "description": "Camera scale",
      "editable": true
    },
    "fov": {
      "type": "float",
      "default": 45.0,
      "description": "Field of view for camera",
      "editable": true
    },
    "softening": {
      "type": "float",
      "default": 1e-3,
      "description": "Softening parameter",
      "editable": true
    },
    "elasticity": {
      "type": "float",
      "default": 1.0,
      "min": 0.0,
      "max": 1.0,
      "description": "Collision elasticity",
      "editable": true
    },
    "sphereSegments": {
      "type": "int",
      "default": 12,
      "description": "Number of segments for sphere rendering",
      "editable": true
    },
    "minDepth": {
      "type": "int",
      "default": 0,
      "description": "Minimum and maximum depth for regions",
      "editable": true
    },
    "maxDepth": {
      "type": "int",
      "default": 100,
      "description": "Minimum and maximum depth for regions",
      "editable": true
    },
    "nearPlane": {
      "type": "float",
      "default": 0.1,
      "description": "Near plane for camera",
      "editable": true
    },
    "farPlane": {
      "type": "float",
      "default": 100000000000.0,
      "description": "Far plane for camera",
      "editable": true
    },
    "cameraMoveSpeed": {
      "type": "float",
      "default": 1,
      "description": "Camera move speed",
      "editable": true
    },
    "WASDSensitivity": { 
      "type": "float",
      "default": 1,
      "description": "WASD movement sensitivity",
      "editable": true
    },
    "mouseWheelSensitivity": {
      "type": "float",
      "default": 1,
      "description": "Mouse wheel sensitivity",
      "editable": true
    },
    "mouseRotationSensitivity": {
      "type": "float",
      "default": 0.2,
      "description": "Mouse rotation sensitivity",
      "editable": true
    },
    "shift": {
      "type": "doubleArray",
      "default": [0, 0, 0],
      "description": "Camera shift position",
      "editable": true
    },
    "cameraPos": {
      "type": "vector3f",
      "default": [0.0, 0.0, 1.0],
      "description": "Camera position",
      "editable": true
    },
    "cameraFront": {
      "type": "vector3f",
      "default": [0.0, 0.0, -1.0],
      "description": "Camera front vector",
      "editable": true
    },
    "cameraUp": {
      "type": "vector3f",
      "default": [0.0, 1.0, 0.0],
      "description": "Camera up vector",
      "editable": true
    },
    "yaw": {
      "type": "float",
      "default": -90.0,
      "description": "Camera yaw",
      "editable": true
    },
    "pitch": {
      "type": "float",
      "default": 0.0,
      "description": "Camera pitch",
      "editable": true
    }
  }
} 